{
  "name": "manga-scraper-v2",
  "version": "1.0.0",
  "description": "Manga scraping system with Playwright and PostgreSQL",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "tsx src/config/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push:pg",
    "seed": "tsx scripts/seed-sources.ts",
    "test:scraping": "tsx scripts/test-scraping.ts"
  },
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "playwright": "^1.40.0",
    "drizzle-orm": "^0.29.0",
    "postgres": "^3.4.0",
    "fastify": "^4.24.0",
    "@fastify/cors": "^8.4.0",
    "sharp": "^0.33.0",
    "jsdom": "^23.0.0",
    "bullmq": "^4.15.0",
    "redis": "^4.6.0",
    "node-cron": "^3.0.3",
    "dotenv": "^16.3.0"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "tsx": "^4.6.0",
    "drizzle-kit": "^0.20.0",
    "@types/node": "^20.10.0",
    "@types/jsdom": "^21.1.0",
    "@types/node-cron": "^3.0.11",
    "@types/dotenv": "^8.2.0"
